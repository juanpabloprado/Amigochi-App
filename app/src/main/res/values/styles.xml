<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activity with no Title -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:actionOverflowButtonStyle">@style/MWidget.Action.Overflow</item>-->
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AWidget.InputLayout.Purple" parent="Widget.Design.TextInputLayout">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorPrimary">@android:color/holo_purple</item>
        <item name="colorPrimaryDark">@android:color/holo_purple</item>
        <item name="colorControlNormal">@android:color/holo_purple</item>
        <item name="colorControlActivated">@android:color/holo_purple</item>
    </style>

    <style name="AWidget.EditText.Purple" parent="Widget.AppCompat.EditText">
        <item name="android:theme">@style/AWidget.InputLayout.Purple</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="AText.EditText.Hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray_500</item>
    </style>
</resources>
